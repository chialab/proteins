{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./types",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*.js"
  ],
}
